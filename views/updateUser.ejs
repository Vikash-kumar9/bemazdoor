<!-- views/updateUser.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="./images/gomazdoor.png" type="image/x-icon">
  <link rel="shortcut icon" href="./images/gomazdoor.png" type="image/x-icon">
  <link rel="stylesheet" href="./stylesheets/form.css" class="stylsheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Update User</title>
  <style> 
   input {
margin :10px;
  };

  label {
margin :10px;
  }
  </style>
</head>
<body>
  <h1>Update User Information</h1>
  <div class="container">
  <% if (message) { %>
    <p><%= message %></p>
  <% } %>
    
  <form action="/user/update" method="POST" enctype="multipart/form-data">
   <div class="container"> <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= user.username %>" required></div>

    

    <div class="container"> <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= user.email %>" required></div>

    <div class="container"></div><label for="Password">Password:</label>
    <input type="text"  name="Password" value="<%=user.Password %>" required></div>

   
    <button type="submit">Update</button>
  </form>

</div>
</body>
</html>
