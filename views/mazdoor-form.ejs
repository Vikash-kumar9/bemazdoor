<script>
  function checkOther(selectedValue) {
    var otherStateInput = document.getElementById("otherState");
    if (selectedValue === "Other") {
      otherStateInput.style.display = "block";
      otherStateInput.setAttribute("required", "required");
    } else {
      otherStateInput.style.display = "none";
