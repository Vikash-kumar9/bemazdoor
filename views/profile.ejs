<hr>
<h3 class="special">---Mazdoor---</h3>
      <% if (mazdoors && mazdoors.length> 0) { %>

        <div class="homecards">
          <% mazdoors.forEach(mazdoor=> { %>
            <div class="container my-3 d-grid">
              <a href="/mazdoor/delete/<%= mazdoor.username %>">
                <img style="width:50px;height:50px;background-color:rgb(255, 255, 255)" src="./images/cart.png"
                  alt="delete">
              </a>
              <h5>Delete</h5>
            </div>

            <div class="card cardb mb-3" style="max-width: 540px;">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <% if (mazdoor.image && mazdoor.image.length> 0) { %>
                    <img src="./<%= mazdoor.image %>" class="card-img" alt="img">
                    <% } else { %>
                      <img src="./default-image.jpg" class="card-img" alt="Default Image">
                      <% } %>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h2 class="card-title">Name: <%= mazdoor.username %>
                    </h2>
                    <hr>
                    <h5 class="card-text">Phone No: <%= mazdoor.phoneNumber %>
                    </h5>
                    <hr>
                    <h5 class="card-text">Type: <%= mazdoor.type %>
                    </h5>
                    <hr>
                    <h5 class="card-text">About: <%= mazdoor.about %>
                    </h5>
                    <hr>
                    <h5 class="card-text"><small class="text-muted">Address: <%= mazdoor.address %></small></h5>
                    <hr>
                    <h5 id='time' class="card-text"><small class="text-muted">Created: <%=
                          moment(mazdoor.create).fromNow() %></small></h5>
                  </div>
                </div>
              </div>
            </div>
           
            <% }); %>
            
        </div>
        <hr>
          <% } else { %>
            Mazdoor data not available
            <% } %>

              <hr>

              <h3 class="special">--- Services --- <br>
              </h3>



              <% if (services && services.length> 0) { %>
                <% services.forEach(element=> { %>
                  <div class="container my-3 d-grid">
                    <a href="/services/delete/<%= element.organizationName %>">
                      <img style="width:50px;height:50px;background-color:rgb(255, 255, 255)" src="./images/cart.png"
                        alt="delete">
                    </a>
                    <h5>Delete</h5>
                  </div>

                  <div class="container bcontent">
                    <div class="combined-container">
                      <div id="imageCarousel_<%= element._id %>" class="carousel slide" data-ride="carousel">

                        <div class="carousel-inner">
                          <% if (element.image && element.image.length> 0) { %>
                            <% element.image.forEach((imageUrl, index)=> { %>
                              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <img class="d-block w-100" src="<%= imageUrl %>" alt="Image <%= index + 1 %>">
                              </div>
                              <% }); %>
                                <% } else { %>
                                  <div class="carousel-item">
                                    <img class="d-block w-100" src="/default-image.jpg" alt="Default Image">
                                  </div>
                                  <% } %>
                        </div>

                        <a class="carousel-control-prev" href="#imageCarousel_<%= element._id %>" role="button"
                          data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#imageCarousel_<%= element._id %>" role="button"
                          data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>

                      <div class="card">
                        <div class="card-body">
                          <h5 class="card-title">
                            <%= element.organizationName %>
                          </h5>
                          <hr>
                          <p class="card-text">Mob: <%= element.contactNo %>
                          </p>
                          <hr>
                          <p class="card-text">Type: <%= element.type %>
                          </p>
                          <hr>
                          <p class="card-text">Address: <%= element.address %>
                          </p>
                          <hr>
                          <p class="card-text">About: <%= element.about %>
                          </p>
                          <hr>
                          <p class="card-text">Availability: <%= element.availability %>
                          </p>
                          <hr>
                          <p class="card-text">Created: <%= moment(element.created).fromNow() %>
                          </p>
                          <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                      </div>
                    </div>
                  
                  </div>
                  <hr>
                  <% }); %>
                    <% } else { %>
                      <!-- Handle the case where no services are available -->
                      <p>No services available.</p>
                      <% } %>



