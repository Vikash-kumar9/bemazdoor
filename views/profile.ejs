<style>
  .bcontent {
    padding: 10px;
    background-color: rgb(255, 255, 255);
    border: 1px solid white;
    border-radius: 10px;
    margin-top: 10px;
    display: grid;
    height: 30%;

  }

  .combined-container {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
  }

  .card,
  #imageCarousel {
    width: 50%;

    height: 100%;

  }

  .carousel img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 500px) {
    .combined-container {
      flex-direction: column;
    }

    .card {
      width: 100%;
    }
  }
</style>

<body>
