        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    
    <title>request portal</title>
    <style>

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-container {
        margin-top: 20px;
        margin-bottom: 20px;
        /* Set a fixed margin for each card */
    }

    .comment-list-container {
        max-height: 100px;
        /* Adjust this value based on your design */
        overflow: hidden;
    }

    .comment-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .expand-comments {
        color: #007bff;
        cursor: pointer;
    }

    .expand-comments:hover {
        text-decoration: underline;
    }

    p {
        border: 1px solid white;
        border-radius: 5px;
        background-color: aliceblue;
        color: black;
        padding: 5px;
    }

    .homecards {
        width: 100%;
        height: 50%;
        /* Adjust height based on your design */
    }

    .card-title {
        font-size: medium;
    }

    .card-text {
        font-size: medium;
    }

    .com {
        border: 1px solid white;
        border-radius: 10px;
        background-color: aliceblue;
        padding: 20px;
    }
</style>

<div class="container"><a class="signup" style="color: black;" href="/portal-form">Add request</a></div>
<% portalData.forEach(element => { %>
    <div class="card-container homecards">
        <!-- Your existing card content here -->
    </div>
<% }) %>

    </style>
</head>

<body>
    <div class="container">
        <form action="/portal" method="get">
            <label for="city">Filter by City:</label>
            <input type="text" name="city" placeholder="Enter city" style="text-transform: lowercase;">
    
            <label for="type">Filter by Type:</label>
            <input type="text" name="type">
    
            <input type="submit" value="Apply Filter">
        </form>
    </div>

    <div style="font-family:Georgia, 'Times New Roman', Times, serif;font-size: smaller;" class="container">
        <h3>requests of users for intract with business owners or workers






        </h3>
    </div>

    <% portalData.forEach(element=> { %>
        <div class="homecards">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-8">
                        <div class="card-body">
                            <div class="container " style="display: flex;flex-wrap: wrap">
                                <h2 class="card-title">
                                    Name: <small class="text-muted">
                                        <%= element.username %>
                                    </small>
                                </h2>
                                <h5 style="margin-left: 20px;color:rgb(207, 10, 10)" class="card-text">
                                    phoneNo: <small class="text-muted">
                                        <%= element.phonenumber %>
                                    </small>
                                </h5>
                            </div>






                            <hr>
                            <div class="com">
                                <h5 class="card-text "> Need: <small class="text-muted">
                                        <%= element.need %>
                                    </small></h5>
                            </div>
                            <hr>
                            <h5 class="card-text">address: <small class="text-muted">
                                    <%= element.address %>
                                </small></h5>


                        </div>
                        <div class="container " style="display: flex;flex-wrap: wrap;color:rgb(207, 10, 10)">
                            <h5 class="card-text">
                                type: <small class="text-muted">
                                    <%= element.type%>
                                </small>
                            </h5>
                            <h5 style="margin-left: 20px;" class="card-text">
                                city: <small class="text-muted">
                                    <%= element.city %>
                                </small>
                            </h5>
                            <h5 style="margin-left: 20px;" id='time' class="card-text">created :<small
                                    class="text-muted">
                                    <%= moment(element.created).fromNow() %>
                                </small></h5>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="comment-section">
                   <h5>Comments:</h5>
                    <div class="comment-list-container">
                        <ul class="comment-list">
                            <% if (element.comments && element.comments.length> 0) { %>
                                <% element.comments.slice(0, 2).forEach(comment=> { %>
                                    <li><strong>
                                            <%= comment.username %>:
                                        </strong>
                                        <%= comment.text %>
                                    </li>
                                    <% }) %>
                                        <% } else { %>
                                            <p>No comments yet. Be the first to comment!</p>
                                            <% } %>
                        </ul>

                        <% if (element.comments && element.comments.length>= 0) { %>
                            <!-- Add a link to open the new comment page -->
                            <a class="btn btn-danger" href="/view-all-comments/<%= element.id %>" class="view-all-comments"> comments section</a>
                            <% } %>
                    </div>

                    <!-- Form to add a new comment -->
                    
                </div>
            </div>
        </div>
        <% }) %>


    
                
</body>

</html>