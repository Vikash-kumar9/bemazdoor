  <div class="container">
    <form action="/service" method="get">
      <label for="city">Filter by City:</label>
      <!-- Input field for city selection -->
      <input type="text" name="city" placeholder="Enter city" style="text-transform: lowercase;">
  <br>
      <label for="type">Filter Service Type:</label>
      <select name="type">
        <option value="">Select Service Type</option>
        <option value="agent">Agent</option>
        <option value="restaurant">restaurant</option>
        <option value="builder">builder</option>
        <option value="packers&movers">packers & movers</option>
        <option value="contractor">Contractor</option>
        <option value="hostel&pg">hostel & pg</option>
        <option value="shopkeeper">shopkeeper</option>
        <option value="warehouse">warehouse</option>
        <option value="rent-room/car/bike">Rent-room/car/bike</option>
        <option value="hospital">hospital</option>
        <option value="gym">Gym</option>
        <option value="travel-agency">travel-agency</option>
        <option value="organiser">organiser</option>
        <option value="education">education</option>
        <option value="cinema">cinema</option>
        <option value="institute">institute</option>
        <option value="mall-marts">mall/marts</option>
        <option value="beauty&spa">beauty&spa</option>
        <option value="hotels">hotels</option><!-- Add more service types as needed -->
      </select>
  
      <input type="submit" value="Apply Filter">
    </form>
</div>

<script>
    // Function to automatically convert city name to lowercase
    document.querySelector('input[name="city"]').addEventListener('input', function () {
        this.value = this.value.toLowerCase();
    });

    // Function to remove empty values from the form before submission
    document.querySelector('form[action="/service"]').addEventListener('submit', function () {
        const cityInput = document.querySelector('input[name="city"]');
        const typeSelect = document.querySelector('select[name="type"]');

        // If city input is empty, set its value to an empty string
        if (cityInput.value.trim() === '') {
            cityInput.value = '';
        }

        // If any input field is empty, set its value to an empty string
        if (typeSelect.value === '') {
            typeSelect.value = '';
        }
    });
</script>


  <% services.forEach(element => { %>
    <% if (!req.query.city || element.city === req.query.city) { %>
       
          
          <div class="container bcontent">
            <div class="combined-container">
                <div id="imageCarousel_<%= element._id %>" class="carousel slide" data-ride="carousel">
                   
                  <div class="carousel-inner">
                        <% if (element.image && element.image.length > 0) { %>
                            <% element.image.forEach((imageUrl, index) => { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img class="d-block w-100" src="../<%= imageUrl %>" alt="Image <%= index + 1 %>">
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                    <a class="carousel-control-prev" href="#imageCarousel_<%= element._id %>" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#imageCarousel_<%= element._id %>" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= element.organizationName %></h5>
                        <hr>
                        <p class="card-text"><h6 class="se">Mob:</h6> <%= element.contactNo %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">Type:</h6> <%= element.type %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">city: </h6><%= element.city %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">state:</h6> <%= element.state %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">Address: </h6><%= element.address %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">About: </h6><%= element.about %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">Availability:</h6> <%= element.availability %></p>
                        <hr>
                        <p class="card-text"><h6 class="se">Created: </h6><%= moment(element.created).fromNow() %></p>
                        <a href="#" class="btn btn-primary">View Details</a>
                        <hr>
                        <h5 id='time' class="card-text">status:<small class="text-muted">
                          <% if (element.verified === true) { %>
                              <img width='50px' height="50px" src="../images/verified.png" alt="Verified Image">
                          <% } else { %>
                            Not verified
                          <% } %>
                      </small></h5>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <% }) %>
  

